@page "/ThemBacSi"
@inject PetHealthRepository Repository
@inject NavigationManager Navigation

<PageTitle> Thêm Bác Sĩ</PageTitle>
<h3 style="text-align:center">THÊM BÁC SĨ</h3>
<EditForm Enhance="true" method="post" FormName="ThemBacSi" OnValidSubmit="AddBacSi" Model="bacSi" autocomplete="off" class="form">

    <div class="form-group">
        <label>Tên Bác sĩ </label>
        <InputText id="TenBacSi" @bind-Value="bacSi.TenBacSi" type="text" class="form-control" required />
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Số Điện Thoại</label>
                <InputText id="SoDienThoai" @bind-Value="bacSi.SoDienThoai" type="text" class="form-control" required />
            </div>
        </div>


        <div class="col-md-6">
            <div class="form-group">
                <label>Email</label>
                <InputText id="Email" @bind-Value="bacSi.Email" type="text" class="form-control" required />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Địa Chỉ</label>
                <InputText id="DiaChi" @bind-Value="bacSi.DiaChi" class="form-control" required />
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-between mt-3">
        <a href="/DanhSachBacSi" class="btn-return">Quay lại</a>
        <button type="submit" class="btn-submit">Hoàn Thành</button>
    </div>

    <DataAnnotationsValidator />
    <ValidationSummary />
</EditForm>

@code {
    [SupplyParameterFromForm]
    public BacSi bacSi { get; set; } = new();
    private async Task AddBacSi()
    {
        await Repository.AddAsyncBacSi(bacSi);
        Navigation.NavigateTo("DanhSachBacSi");
    }
}