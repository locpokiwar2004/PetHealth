<div class="booking-form-container">
    <h2>Đặt lịch khám thú y</h2>
    <form id="booking-form">
        <div class="form-group">
            <label for="pet-name">Tên thú cưng</label>
            <input type="text" id="pet-name" name="pet-name" placeholder="Nhập tên thú cưng của bạn" required>
        </div>

        <div class="form-group">
            <label for="owner-name">Tên chủ nuôi</label>
            <input type="text" id="owner-name" name="owner-name" placeholder="Nhập tên chủ nuôi" required>
        </div>

        <div class="form-group">
            <label for="phone">Số điện thoại</label>
            <input type="tel" id="phone" name="phone" placeholder="Nhập số điện thoại liên hệ" required>
        </div>

        <div class="form-group">
            <label for="date">Ngày hẹn khám</label>
            <input type="date" id="date" name="date" required>
        </div>

        <div class="form-group">
            <label for="time">Giờ hẹn khám</label>
            <input type="time" id="time" name="time" required>
        </div>

        <div class="form-group">
            <label for="service">Dịch vụ</label>
            <select id="service" name="service" required>
                <option value="general">Khám tổng quát</option>
                <option value="surgery">Phẫu thuật</option>
                <option value="vaccination">Tiêm phòng</option>
                <option value="dental">Chăm sóc răng miệng</option>
            </select>
        </div>

        <div class="form-group">
            <label for="notes">Ghi chú</label>
            <textarea id="notes" name="notes" placeholder="Ghi chú thêm về tình trạng của thú cưng (nếu có)"></textarea>
        </div>

        <button type="submit">Đặt lịch</button>
    </form>
</div>


